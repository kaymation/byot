<h2>Woaaa there</h2>
<h3>You must be logged in to build your own tikipole!</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true, html: {id: "sign_in_user"}) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "button blue" %>
  </div>
<% end %>

<span>New to BYoT?</span>
<a href="#" id="signUpFromLogin">Sign Up</a>
